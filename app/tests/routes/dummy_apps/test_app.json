{
    "name": "test_app",
    "display_name": "Test App",
    "version": "1.0.0",
    "provider": "test_provider",
    "description": "Test App is a hypothetical application used to demonstrate how API schemas can be structured. It offers basic functionalities for testing purposes such as creating resources, retrieving data, and simulating user interactions. This API is useful for developers testing their integrations and workflows.",
    "server_url": "https://api.testapp.com",
    "logo": "https://example.com/testapp-logo.png",
    "categories": [
        "testcategory",
        "utility"
    ],
    "tags": [
        "testing",
        "simulation"
    ],
    "supported_auth_schemes": {
        "api_key": {
            "parameter_name": "X-Test-API-Key",
            "location": "header"
        },
        "http_basic": {
            "username": "test_username",
            "password": "test_password"
        },
        "oauth2": {
            "authorization_url": "https://testapp.com/oauth/authorize",
            "token_url": "https://testapp.com/oauth/token",
            "refresh_url": "https://testapp.com/oauth/refresh",
            "default_scopes": [
                "read",
                "write"
            ],
            "available_scopes": [
                "read",
                "write",
                "admin"
            ],
            "client_id": "your_client_id",
            "client_secret": "your_client_secret",
            "additional_parameters": [
                {
                    "name": "redirect_uri",
                    "required": true
                },
                {
                    "name": "state",
                    "required": false
                }
            ]
        }
    },
    "functions": [
        {
            "name": "TEST_APP_CREATE_RESOURCE",
            "description": "Create a new resource in Test App",
            "parameters": {
                "type": "object",
                "properties": {
                    "resource_name": {
                        "type": "string",
                        "description": "The name of the resource"
                    },
                    "resource_type": {
                        "type": "string",
                        "description": "The type of resource being created"
                    },
                    "attributes": {
                        "type": "object",
                        "description": "Additional attributes for the resource"
                    }
                },
                "required": [
                    "resource_name",
                    "resource_type"
                ]
            }
        },
        {
            "name": "TEST_APP_GET_RESOURCE",
            "description": "Retrieve a resource from Test App",
            "parameters": {
                "type": "object",
                "properties": {
                    "resource_id": {
                        "type": "string",
                        "description": "The unique ID of the resource"
                    }
                },
                "required": [
                    "resource_id"
                ]
            }
        },
        {
            "name": "TEST_APP_UPDATE_RESOURCE",
            "description": "Update an existing resource in Test App",
            "parameters": {
                "type": "object",
                "properties": {
                    "resource_id": {
                        "type": "string",
                        "description": "The ID of the resource to update"
                    },
                    "updates": {
                        "type": "object",
                        "description": "A key-value pair object of fields to update"
                    }
                },
                "required": [
                    "resource_id",
                    "updates"
                ]
            }
        },
        {
            "name": "TEST_APP_DELETE_RESOURCE",
            "description": "Delete a resource in Test App",
            "parameters": {
                "type": "object",
                "properties": {
                    "resource_id": {
                        "type": "string",
                        "description": "The ID of the resource to delete"
                    }
                },
                "required": [
                    "resource_id"
                ]
            }
        }
    ]
}
