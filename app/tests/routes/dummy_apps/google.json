{
    "name": "google",
    "display_name": "Google",
    "version": "1.0.0",
    "provider": "google",
    "description": "Google is a global technology company that provides a wide range of internet-based products and services. Best known for its search engine, Google enables users to search for information, websites, images, videos, and more across the web.",
    "server_url": "https://api.google.com",
    "logo": "https://example.com/logo.png",
    "categories": [
        "devtools"
    ],
    "tags": [
        "code",
        "git"
    ],
    "supported_auth_schemes": {
        "api_key": {
            "parameter_name": "X-API-Key",
            "location": "header"
        },
        "http_basic": {
            "username": "username",
            "password": "password"
        },
        "http_bearer": {
            "header_name": "Authorization",
            "token_prefix": "Bearer"
        },
        "oauth2": {
            "authorization_url": "https://example.com/oauth/authorize",
            "token_url": "https://example.com/oauth/token",
            "refresh_url": "https://example.com/oauth/refresh",
            "default_scopes": [
                "read",
                "write"
            ],
            "available_scopes": [
                "read",
                "write",
                "admin"
            ],
            "client_id": "your_client_id",
            "client_secret": "your_client_secret",
            "additional_parameters": [
                {
                    "name": "redirect_uri",
                    "required": true
                },
                {
                    "name": "state",
                    "required": false
                }
            ]
        },
        "open_id": {
            "issuer_url": "https://example.com/.well-known/openid-configuration",
            "client_id": "your_openid_client_id",
            "client_secret": "your_openid_client_secret",
            "default_scopes": [
                "openid",
                "profile",
                "email"
            ],
            "additional_scopes": [
                "offline_access"
            ],
            "additional_parameters": [
                {
                    "name": "nonce",
                    "required": true
                }
            ]
        }
    },
    "functions": [
        {
            "name": "GOOGLE_CALENDAR_CREATE_EVENT",
            "description": "Create a new event in Google Calendar",
            "parameters": {
                "type": "object",
                "properties": {
                    "calendar_id": {
                        "type": "string",
                        "description": "The ID of the Google Calendar"
                    },
                    "event_title": {
                        "type": "string",
                        "description": "The title of the event"
                    },
                    "start_time": {
                        "type": "string",
                        "description": "The start time of the event (in ISO 8601 format)"
                    },
                    "end_time": {
                        "type": "string",
                        "description": "The end time of the event (in ISO 8601 format)"
                    },
                    "metadata": {
                        "type": "object",
                        "properties": {
                            "description": {
                                "type": "string",
                                "description": "A detailed description of the event"
                            },
                            "attendees": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "description": "Email addresses of attendees"
                                }
                            }
                        },
                        "required": [
                            "description",
                            "attendees"
                        ]
                    }
                },
                "required": [
                    "calendar_id",
                    "event_title",
                    "start_time",
                    "end_time",
                    "metadata"
                ]
            }
        },
        {
            "name": "GOOGLE_DRIVE_UPLOAD_FILE",
            "description": "Upload a file to Google Drive",
            "parameters": {
                "type": "object",
                "properties": {
                    "folder_id": {
                        "type": "string",
                        "description": "The ID of the folder where the file will be uploaded"
                    },
                    "file_name": {
                        "type": "string",
                        "description": "The name of the file to be uploaded"
                    },
                    "file_type": {
                        "type": "string",
                        "description": "The MIME type of the file"
                    },
                    "metadata": {
                        "type": "object",
                        "properties": {
                            "description": {
                                "type": "string",
                                "description": "Description of the file"
                            },
                            "permissions": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "email": {
                                            "type": "string",
                                            "description": "Email address of the person to share with"
                                        },
                                        "role": {
                                            "type": "string",
                                            "enum": ["owner", "writer", "reader"],
                                            "description": "Permission role for the person"
                                        }
                                    },
                                    "required": [
                                        "email",
                                        "role"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "permissions"
                        ]
                    }
                },
                "required": [
                    "folder_id",
                    "file_name",
                    "file_type"
                ]
            }
        }
    ]
}