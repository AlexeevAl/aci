{
    "name": "github",
    "display_name": "GitHub",
    "version": "1.0.0",
    "provider": "github",
    "description": "GitHub is a cloud-based platform that enables developers to store, manage, and share their code repositories. It provides version control using Git, a system that tracks changes to files, allowing multiple people to collaborate on a project efficiently. GitHub facilitates code sharing, collaboration, and management by providing tools for version tracking, branching, and merging of code.",
    "server_url": "https://api.github.com",
    "logo": "https://example.com/logo.png",
    "categories": [
        "devtools",
        "testcategory-2"
    ],
    "tags": [
        "code",
        "git"
    ],
    "supported_auth_schemes": {
        "api_key": {
            "parameter_name": "X-API-Key",
            "location": "header"
        },
        "http_basic": {
            "username": "username",
            "password": "password"
        },
        "http_bearer": {
            "header_name": "Authorization",
            "token_prefix": "Bearer"
        },
        "oauth2": {
            "authorization_url": "https://example.com/oauth/authorize",
            "token_url": "https://example.com/oauth/token",
            "refresh_url": "https://example.com/oauth/refresh",
            "default_scopes": [
                "read",
                "write"
            ],
            "available_scopes": [
                "read",
                "write",
                "admin"
            ],
            "client_id": "your_client_id",
            "client_secret": "your_client_secret",
            "additional_parameters": [
                {
                    "name": "redirect_uri",
                    "required": true
                },
                {
                    "name": "state",
                    "required": false
                }
            ]
        },
        "open_id": {
            "issuer_url": "https://example.com/.well-known/openid-configuration",
            "client_id": "your_openid_client_id",
            "client_secret": "your_openid_client_secret",
            "default_scopes": [
                "openid",
                "profile",
                "email"
            ],
            "additional_scopes": [
                "offline_access"
            ],
            "additional_parameters": [
                {
                    "name": "nonce",
                    "required": true
                }
            ]
        }
    },
    "functions": [
        {
            "name": "GITHUB_CREATE_REPOSITORY",
            "description": "Create a new repository",
            "parameters": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the repository"
                    },
                    "description": {
                        "type": "string",
                        "description": "A description for the repository"
                    },
                    "private": {
                        "type": "boolean",
                        "description": "Whether the repository is private or public"
                    }
                },
                "required": [
                    "name",
                    "description",
                    "private"
                ]
            }
        },
        {
            "name": "GITHUB_CREATE_ISSUE",
            "description": "Create a new issue in a repository",
            "parameters": {
                "type": "object",
                "properties": {
                    "repository": {
                        "type": "string",
                        "description": "The name of the repository"
                    },
                    "title": {
                        "type": "string",
                        "description": "The title of the issue"
                    }
                },
                "required": [
                    "repository",
                    "title"
                ]
            }
        },
        {
            "name": "GITHUB_CREATE_PULL_REQUEST",
            "description": "Create a new pull request in a repository",
            "parameters": {
                "type": "object",
                "properties": {
                    "repository": {
                        "type": "string",
                        "description": "The name of the repository"
                    },
                    "source_branch": {
                        "type": "string",
                        "description": "The name of the source branch for the pull request"
                    },
                    "target_branch": {
                        "type": "string",
                        "description": "The name of the target branch where the pull request will be merged"
                    },
                    "title": {
                        "type": "string",
                        "description": "The title of the pull request"
                    },
                    "metadata": {
                        "type": "object",
                        "properties": {
                            "author": {
                                "type": "string",
                                "description": "The author of the pull request"
                            },
                            "reviewer": {
                                "type": "string",
                                "description": "The primary reviewer for the pull request"
                            }
                        },
                        "required": [
                            "author",
                            "reviewer"
                        ]
                    }
                },
                "required": [
                    "repository",
                    "source_branch",
                    "target_branch",
                    "title",
                    "metadata"
                ]
            }
        }     
    ]
}